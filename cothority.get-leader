#!/bin/sh -eux

readonly BC=data/cothority/bc-9cc36071ccb902a1de7e0d21a2c176d73894b1cf88ae4cc2ba4c95cd76f474f3.cfg

bin/bcadmin latest --bc "$BC" --roster | awk -F '[/"]' --assign path=`basename $0` '
	BEGIN {
		leader = 1
		"date +%s" | getline time
	}

	/Address/ {
		host = gensub("\\.", "_", "g", $4)
		print path "." host "\t" leader "\t" time
		leader = 0
	}

	END {
		if (leader == 1) {
			exit 1
		}
	}
'
